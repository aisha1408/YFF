# Sustainable Pesticide & Fertilizer Recommendation System
# Environment Variables Configuration

# Model Configuration
MODEL_PATH=models/plant_disease_model.h5
MOCK_MODE=true
CONFIDENCE_THRESHOLD=0.7
LOW_CONFIDENCE_THRESHOLD=0.5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Image Processing
MAX_FILE_SIZE_MB=8
MIN_IMAGE_DIMENSIONS=224
SUPPORTED_FORMATS=jpeg,jpg,png

# Anti-Overuse Configuration
MAX_APPLICATIONS_PER_SEASON=4
MAX_DOSAGE_MULTIPLIER=1.5
REQUIRE_CONFIRMATION_ABOVE=1.2

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,hi,pt

# Security (for production)
SECRET_KEY=your-secret-key-here
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database (if using persistent storage)
DATABASE_URL=sqlite:///./plant_care.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
